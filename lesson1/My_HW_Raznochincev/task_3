#include <iostream>


 using namespace std;
 float res,res2;
    int prostoe_chislo(float nb){
       res = nb/2;
        res2 = nb/3;
        if (nb == 2){
            return 1;
            }if (nb == 3){
            return 1;
            }
           if (res == (int)res ){
            return 0;
            }else if (res2 == (int)res2){
                return 0;
                }else{
                    return 1;
                    }
    }
int main()
{
